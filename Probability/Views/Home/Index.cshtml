@model Probability.ViewModels.CalculatorViewModel

@{
    ViewData["Title"] = "Calculator";
}
<bootstrap-alert class="alert-warning alert-dismissible fade in">
    <bootstrap-alert-close><span aria-hidden="true">×</span></bootstrap-alert-close>
    <strong>Let's Calc!</strong> Make your choice below.
</bootstrap-alert>

<div class="row">
    <div>
        <h2>Calculator</h2>
        <div class="navbar-form">
            <form asp-controller="Home" asp-action="Calculate" method="post" class="form-horizontal" role="form">
                <div class="form-group col-xs-offset-2 col-xs-10">
                    <div class="">
                        <select class="form-control" asp-for="Calculator"
                                asp-items="@(new SelectList(Model.CalculatorTypes))">
                            <option>Select your calculator</option>
                        </select>
                    </div>
                    <span asp-validation-for="Calculator" class="text-danger"></span>
                </div>

                <div class="form-group col-xs-12 col-sm-5">
                    <label asp-for="Left" class="col-xs-2 control-label"></label>
                    <div class="col-xs-10">
                        <input asp-for="Left" class="form-control" />
                    </div>
                    <span asp-validation-for="Left" class="text-danger"></span>
                </div>
                <div class="form-group col-xs-12 col-sm-5">
                    <label asp-for="Right" class="col-xs-2 control-label"></label>
                    <div class="col-xs-10">
                        <input asp-for="Right" class="form-control" />
                    </div>
                    <span asp-validation-for="Right" class="text-danger"></span>
                </div>
                <div class="form-group col-xs-8 col-sm-2">
                    <div class="col-xs-offset-1">
                        <bootstrap-button class="btn btn-primary" type="submit">Calculate</bootstrap-button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>